    private void hargaActionPerformed(java.awt.event.ActionEvent evt) {                                      
        // TODO add your handling code here:
        Double harga,jbeli,hasil;
        harga=Double.parseDouble(hargabarang.getText());
        jbeli=Double.parseDouble(JumlahBarang.getText());
        hasil=harga*jbeli;
        payment.setText(String.valueOf(hasil));
    }                                     

