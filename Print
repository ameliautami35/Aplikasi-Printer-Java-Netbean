    private void btnUploadFileActionPerformed(java.awt.event.ActionEvent evt) {                                              
        // TODO add your handling code here:
        JFileChooser chooser = new JFileChooser();
        chooser.showOpenDialog(null);
        File f = chooser.getSelectedFile();
        String filename = f.getAbsolutePath();
        jTextField1.setText (filename);
    }                                             

    private void KertasComboBoxActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        String paperSize = (String) KertasComboBox.getSelectedItem();
        double harga = 0.0;

        // Tambahkan logika untuk menghitung harga berdasarkan ukuran kertas yang dipilih
        switch (paperSize) {
            case "A4":
                harga = 500;
                break;
            case "F4":
                harga = 500;
                break;
            default:
                // Tambahkan penanganan jika ukuran kertas tidak valid
                break;
        }

        // Tampilkan harga di dalam txtJumlahHarga
        hargabarang.setText(String.valueOf(harga));
    }                                              

    private void KertasComboBox1ActionPerformed(java.awt.event.ActionEvent evt) {                                                
        // TODO add your handling code here:
        String ukuranKertas = (String) KertasComboBox1.getSelectedItem();
        
    }                                               

